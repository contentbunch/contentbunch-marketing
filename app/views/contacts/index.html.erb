<div class='col-xs-12 col-sm-12 col-md-12 col-lg-12 contact-list'>
  <h2>Look who has Contacted us</h2>
   <table class='table table-bordered table-striped'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Message</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @contacts.each do |contact| %>
        <tr class=<%= notify_message_class(contact) %>>
          <td><%= link_to contact.name, contact_path(contact) %></td>
          <td><%= contact.email %></td>
          <td><%= contact.message %></td>
          <td><%= link_to 'Delete', contact_path(contact), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
